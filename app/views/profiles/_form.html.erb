<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="hidden">
   <%= f.number_field :user_id, value: current_user.id %>
   </div> 
  
    <%= f.input :name %>
    <%= f.input :summary %>
    <%= f.input :gender %>
    <%= f.input :age %>
    <%= f.input :weight %>
    <%= f.input :goal %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
